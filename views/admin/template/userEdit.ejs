<% if(record) {%>
    <div class="form-group">
        <label for="E-mail" class="col-sm-2 control-label">E-mail</label> 
        <div class="col-sm-10">
            <%= record.email %>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Name</label> 
        <div class="col-sm-10">
            <input type="input" class="form-control" placeholder="Input Name" id="name" name='name' value="<%= record.name %>">
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label> 
        <div class="col-sm-10">
            <input type="password" class="form-control" placeholder="Input Password" id="password" name='password' value="<%= record.password %>">
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Confirm Password</label> 
        <div class="col-sm-10">
            <input type="password" class="form-control" placeholder="Input Password" id="confirmPassword" name='confirmPassword' value="<%= record.password %>">
        </div>
    </div>
 
    <div class="form-group">
    <label for="password" class="col-sm-2 control-label"></label> 
    <div class="col-sm-10">
        <input type="submit" value="Update"/>
        <span id="msg_action"></span>
    </div>

<% } %>